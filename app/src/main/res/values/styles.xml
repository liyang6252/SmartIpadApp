<resources>

    <style name="BaseTheme.Full" parent="BaseTheme">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseTheme.Full">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_set_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">1px</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_right</item>
        <item name="android:background">@drawable/main_btn_ripple</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="CalendarTextAppearance" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/mcv_text_date_light</item>
    </style>

    <style name="CalendarHeaderAppearance" parent="TextAppearance.MaterialCalendarWidget.Header">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="CalendarWeekAppearance" parent="TextAppearance.MaterialCalendarWidget.WeekDay">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LightPickerDialogTheme" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowMinWidthMinor">0dip</item>
        <item name="android:windowMinWidthMajor">0dip</item>
    </style>

    <style name="ColorPicker_ColorPickerViewStyle">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
